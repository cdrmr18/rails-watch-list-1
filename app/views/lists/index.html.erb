<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path("hero.png")%>);">
  <div class="container text-center ">
    <h1>Wacthlist</h1>
    <p>Enjoy some of my favorite entertainment!</p>
    <%= link_to 'Search Movies', lists_path, class: "btn btn-color mt-2" %>
    <%= link_to 'Create List', new_list_path, class: "btn btn-color-ghost mt-2" %>
  </div>
</div>

<h3 class="text-right p-3">Lists (<%= @lists.count %>)</h3>


  <div class="container">
  <% unless @lists.empty? %>
    <div class="row">
    <% @lists.each do |list| %>
      <div class="col-12 col-sm-6 col-md-4 mt-2">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key %>')">
          <%= link_to list.name, list_path(list) %>
        </div>

      </div>
    <% end %>
    </div>
  </div>
<% end %>
