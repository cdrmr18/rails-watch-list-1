<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path("hero.png")%>);">
  <div class="container text-center ">
    <h1>Wacthlist</h1>
    <p>Enjoy some of my favorite entertainment!</p>
    <%= link_to 'Search Movies', lists_path, class: "btn btn-color mt-2" %>
    <%= link_to 'Create List', new_list_path, class: "btn btn-color-ghost mt-2" %>
  </div>
</div>

<h2>Lists (<%= @lists.count %>)</h2>


  <div class="container">
  <% unless @lists.empty? %>
    <div class="row">
    <% @lists.each do |list| %>
      <div class="col-12 col-sm-6 col-md-4 mt-3">
        <div class="card" style="w-100">
          <img class="card-img-top" src="..." alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title">Card title</h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            <%= link_to list.name, list_path(list) %>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
<% end %>
