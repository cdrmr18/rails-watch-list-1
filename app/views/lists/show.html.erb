
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key %>');"> 
    <div class="container">
        <h1><%= @list.name %></h1>
        <p><%= @list.comment %></p>
    </div>
</div>

<div class="text-right p-3">
    <%= link_to 'Add Movie', anchor: "add-movie"%>
</div>

<div class="container">
    <% unless @movies.empty? %>
    <div class="row">
    <% @movies.each  do |movie| %>
        <div class="col-12 col-sm-6 col-md-4 mt-4">
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path movie.photo.key, crop: :fill %>')">
                <%= link_to 'Delete', path, method: :delete %>
            </div>
        </div>
    <% end %>
    </div>
</div>
    <% end %>



   <div class="container mt-4" id="add-movie">
     <h3>Add a movie to your <%= @list.name %> list</h3>
    <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.association :movie, prompt: 'Select a movie', input_html: { class: 'select2' } %>
        <%= f.button :submit %>
    <% end %>
   </div>
</div>