<div class="container">
    
    <h1><%= @list.name %></h1>
    <p><%= @list.comment %></p>

    <% @movies.each do |movie| %>
        <h2><%= movie.title %></h2>
    <% end %>


   <div class="container mt-4">
     <h3>Add a movie to your <%= @list.name %> list</h3>
    <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.association :movie, prompt: 'Select a movie', input_html: { class: 'select2' } %>
        <%= f.button :submit %>
    <% end %>
   </div>
</div>